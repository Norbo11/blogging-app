.site_wrapper
    = render 'form'
        
    .timeline
        - @posts.reverse_each do |post|
            .post
                .post_message
                    / Use simple_format to ensure that new lines are displayed in the message.
                    =  simple_format(post.message)
                .post_time
                    = time_ago_in_words(post.created_at) + " ago."